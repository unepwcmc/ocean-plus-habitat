<section id="<%= id %>" class="container section-padding--top">
  <div class="flex">
    <h2><%= t('countries.shared.red_list.title'); %></h2>
    <modal-trigger id="citation" modal-content="<%= modal_content %>" class="icon--citation margin-space-left"></modal-trigger>
  </div>
  <p><%= t('countries.shared.red_list.intro_text', country_name: @name) %></p>

  <%= render 'shared/red-list-table' %>

  <p class="text--smallprint"><%= t('countries.shared.red_list.smalltext_1').html_safe %></p>
  <p class="text--smallprint"><%= t('countries.shared.red_list.smalltext_2').html_safe %></p>
  <p class="text--smallprint right"><%= t('countries.shared.red_list.smalltext_3') %></p>
</section>
