<section id="<%= id %>" class="section-padding bg--grey-xlight">
  <div class="container">
    <div class="flex">
      <h2><%= t('countries.shared.habitat_change.title') %></h2>
      <modal-trigger id="citation" modal-content="<%= modal_content %>" tooltip-text="<%= t('global.sources_modal.tooltip').html_safe %>" class="icon--citation margin-space-left"></modal-trigger>
    </div>

    <p class="max-width-container-small">
      <%= t('countries.shared.habitat_change.intro_text') %>
    </p>

    <div class="cards--habitat-change">
      <% habitat_change.each do |habitat| %>
        <div class="card__card">
          <div class="card__visual flex <%= 'disabled' if habitat[:change].zero? %>">
            <i class="card__icon <%= icon_class(habitat) %>" alt="<%= habitat[:title] %> icon"></i>
             <span class="card__stat">

              <div class="card__stat-text"><%= habitat[:change_direction] %></div>

              <div><%= habitat[:change_abs] %></div>
            </span>
          </div>

          <div class="card__title-wrapper flex flex-v-center">
            <h4 class="card__title"><%= habitat[:title] %></h4>
          </div>

          <div class="card__content">
            <%= habitat[:text].html_safe %>
          </div>
        </div>
      <% end %>
    </div>

    <p class="text--smallprint max-width-container-small">
      <%= t('countries.shared.habitat_change.smallprint').html_safe %>
    </p>
  </div>
</section>
