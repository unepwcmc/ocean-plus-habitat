<section id="<%= id %>" class="section-padding">
  <div class="container--small">
    <div class="h2-wrapper flex flex-v-center">
      <h2><%= t('countries.shared.habitat_condition.title') %></h2>
      <% if local_assigns[:modal_content] %>
        <modal-trigger
          id="citation"
          modal-content="<%= modal_content %>"
          tooltip-text="<%= t('global.sources_modal.tooltip').html_safe %>"
          class="icon--citation margin-space-left"
        ></modal-trigger>
      <% end %>
    </div>

    <p>
      <%= t('countries.shared.habitat_condition.text', country_name: @name).html_safe %>
    </p>
  </div>
</section>
