  locals: {
    nav_tertiary: nav_tertiary
  }
%>

<%= render partial: '/countries/partials/habitats-present',
  locals: {
    id: "section-#{t('home.nav_sticky')[0][:id]}",
    habitats_present: @habitats_present,
    modal_content: habitats_present_modal
  }
%>

<%= render partial: '/countries/partials/map',
  locals: {
    iso3: @country.iso3,
    datasets: @map_datasets
  }
%>

<%= render partial: '/countries/partials/red-list',
  locals: {
    id: "section-#{t('home.nav_sticky')[1][:id]}",
    modal_content: country_red_list_modal
  }
%>

<%= render partial: '/countries/partials/example-species',
  locals: {
    id: "section-#{t('home.nav_sticky')[2][:id]}",
