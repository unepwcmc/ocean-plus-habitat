<section id="<%= id %>" class="section-padding">
  <div class="container--small">
    <div class="flex">
      <h2><%= t('home.habitat_change.title'); %></h2>
      <modal-trigger id="citation" modal-content="<%= modal_content %>" tooltip-text="<%= t('global.sources_modal.tooltip').html_safe %>" class="icon--citation margin-space-left"></modal-trigger>
    </div>

    <% t('home.habitat_change.text_1').each do |p| %>
      <p><%= p.html_safe %></p>
    <% end %>
  </div>
</section>

<section class="section-padding bg--grey-xlight">
  <div class="container">
    <%= render partial: 'site/partials/habitat-change',
      locals: {
        habitat_cover: habitat_cover
      }
    %>
  </div>
</section>

<section class="section-padding">
  <div class="container--small">
    <% t('home.habitat_change.text_2').each do |p| %>
      <p><%= p.html_safe %></p>
    <% end %>
  </div>
</section>
