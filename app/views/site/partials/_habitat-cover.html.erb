<section id="<%= id %>" class="section-padding">
  <div class="container">
    <div class="flex">
      <h2><%= t('home.habitat_change.title'); %></h2>
      <modal-trigger id="citation" modal-content="<%= modal_content %>" class="icon--citation margin-space-left"></modal-trigger>
    </div>

    <% t('home.habitat_change.text_1').each do |p| %>
      <p><%= p.html_safe %></p>
    <% end %>

    <%= render partial: 'site/partials/habitat-change',
      locals: {
        habitat_cover: habitat_cover
      }
    %>

    <% t('home.habitat_change.text_2').each do |p| %>
      <p class="italic"><%= p.html_safe %></p>
    <% end %>
  </div>
</section>
