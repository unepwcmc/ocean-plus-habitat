<section class="section-padding">
  <div class="container">
    <div class="chart--row">
      <div class="chart__content">
        <h3>Top five countries and territories with habitat area covered by a protected area</h3>

        <p><%= @data['top_protected_description'] %></p>
      </div>
      
      <div class="chart__chart">
        <% @chart_protected_areas.each do |item| %>
          <div class="chart__item">
            <p class="chart__label bold"><%= item[:label] %></p>
            <div class="chart__bar">
              <span class="chart__bar-label"><%= item[:percent] %>%</span>
              <span class="chart__colour" style="width:<%= item[:percent] %>%;"></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
